generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int          @id @default(autoincrement())
  name          String?
  email         String       @unique
  password      String
  emailVerified DateTime?    @map("email_verified")
  createdAt     DateTime     @default(now()) @map("created_at")
  dob           DateTime     @db.Date
  address       String
  userRoles     UserRole[]   // ðŸ‘ˆ relation to join table
  @@map("users")
}

model Role {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  description String?
  permissions Json
  userRoles   UserRole[]   // ðŸ‘ˆ relation to join table
  @@map("roles")
}

model UserRole {
  id     Int   @id @default(autoincrement())
  user   User  @relation(fields: [userId], references: [id])
  userId Int

  role   Role  @relation(fields: [roleId], references: [id])
  roleId Int

  @@unique([userId, roleId]) // ðŸ‘ˆ prevents duplicates
  @@map("user_roles")
}

